<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head') %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <title>Forgot Password</title>
    <style>
        body {
            background-color: #F7F5F7;
            color: #FAFAFF;
            font-family: 'Poppins', sans-serif;
            font-weight: 400;
            font-style: normal;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        h2 {
            color: #FAFAFF;
            font-weight: bold;
        }

        .container {
            width: 35rem;
            height: 25rem;
            padding: 20px;
            padding-left: 2rem;
            padding-right: 2rem;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            background-color: #4F3CC9;
            margin-top: -10rem;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="password"],
        input[type="email"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #9747FF;
            border-radius: 4px;
            background-color: #FAFAFF;
            color: #09150E;
        }

        .btn-primary {
            margin-top: 1.5rem;
            background-color: #9747FF;
            color: #FAFAFF;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
            width: 100%;
            font-size: 16px;
        }

        .btn-primary:hover {
            background-color: #8000e0;
        }

        .hidden {
            display: none;
        }

        .menu-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
            z-index: 999;
        }

        .menu-overlay.active {
            display: flex;
        }

        .menu-container {
            background-color: #4F3CC9;
            padding: 20px;
            border-radius: 8px;
            width: 80%;
            max-width: 300px;
            text-align: center;
        }

        .menu-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .menu-header img {
            height: 30px;
        }

        .menu-header .close-button {
            background: none;
            border: none;
            color: #FAFAFF;
            font-size: 24px;
            cursor: pointer;
        }

        .navbar-item {
            color: #FAFAFF;
            text-decoration: none;
            display: block;
            margin: 10px 0;
        }

        .navbar {
            width: 100%;
            background-color: #F7F5F7;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .menu-button {
            border: none;
            outline: none;
            color: #ffffff;
            cursor: pointer;
            margin-top: 1rem;
            margin-right: 10rem; /* Move the menu button more to the right */
            display: flex;
            align-items: center;
            font-size: 1.5rem;
            gap: 0.5rem;
            background-color: rgba(0, 0, 0, 0.3);
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            padding: 10px 20px;
            transition: background-color 0.3s, color 0.3s;
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 48;
        }

        .menu-button:hover {
            color: #4F3CC9; /* Change the text color on hover */
        }

        .menu-button:focus {
            outline: none; /* Ensure no outline on focus */
        }

        .navbar-brand {
            margin-left: 10rem;
        }

        .navbar-brand img {
            height: 4rem; /* Increase the height for a larger logo */
        }

        .btn-secondary {
            width:100%;
            border: none;
            background: none;
            margin-top: 1rem;
            display: flex;
            align-items: center; /* Align icon and text vertically */
            justify-content: center;
            gap: 0.5rem; /* Space between icon and text */
            font-size: 16px;
            color: #FAFAFF;
            cursor: pointer;
        }

        .btn-secondary:hover {
            outline: none;
            border: none;
            background: none;
        }

        .btn-secondary:hover .btn-text {
            text-decoration: underline;
        }

        #code-inputs {
            display: flex;
            justify-content: space-between;
            gap: 10px;
            margin-bottom: 15px;
        }

        .code-input {
            margin-top: 1.5rem;
            width: 2rem;
            height: 4rem;
            text-align: center;
            font-size: 20px;
            border-radius: 4px;
            background-color: #E0E0E0;
            color: #ffffff;
        }

        #code-inputs .code-input {
            background-color: rgba(0, 0, 0, 0.5);
            color: #ffffff;
            border: none;
            outline: none;
        }
    </style>
</head>

<body>
    <nav class="navbar">
        <div class="navbar-brand">
            <a href="/">
                <img src="../img/Logo.png" alt="Unistays Logo">
            </a>
        </div>
        <button class="menu-button" onclick="toggleMenu()">
            <span class="material-symbols-outlined" style="font-size: 2rem;">menu</span>
            Menu
        </button>
    </nav>

    <div id="menuOverlay" class="menu-overlay">
        <div class="menu-container">
            <div class="menu-header">
                <img src="../img/Logo.png" alt="Unistays Logo" class="overlay-logo">
                <button class="close-button" onclick="toggleMenu()">&times;</button>
            </div>
            <a href="#how-it-works" class="navbar-item">How it Works</a>
            <hr>
            <a href="#pricing" class="navbar-item">Pricing</a>
            <hr>
            <a href="#FAQ" class="navbar-item">FAQ</a>
            <hr>
            <a href="/login" class="navbar-item">Log In</a>
            <hr>
        </div>
    </div>

    <main>
        <div class="container">
            <h2 id="title" style="margin-top:1.5rem;">Forgot your password?</h2>
            <form id="email-form">
                <label for="email" class="form-label" style="margin-bottom:1rem;">Enter your email and we will send you a verification code.</label>
                <label for="email" class="form-label" style="font-weight: bold;">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
                <button type="submit" class="btn-primary">Send verification code</button>
                <button type="back" class="btn-secondary" onclick="redirectToLogin()">
                    <span class="material-symbols-outlined">arrow_back</span>
                    <span class="btn-text">Back to login</span>
                </button>
            </form>
            <form id="code-form" class="hidden">
                <div id="code-inputs">
                    <input type="text" maxlength="1" id="code-1" class="code-input" required>
                    <input type="text" maxlength="1" id="code-2" class="code-input" required>
                    <input type="text" maxlength="1" id="code-3" class="code-input" required>
                    <input type="text" maxlength="1" id="code-4" class="code-input" required>
                    <input type="text" maxlength="1" id="code-5" class="code-input" required>
                    <input type="text" maxlength="1" id="code-6" class="code-input" required>
                </div>
                <button type="submit" class="btn-primary">Verify</button>
                <button type="back" class="btn-secondary" onclick="redirectToLogin()">
                    <span class="material-symbols-outlined">arrow_back</span>
                    <span class="btn-text">Back to login</span>
                </button>
            </form>
            <form id="password-form" class="hidden">
                <label for="password" style="font-weight: bold; margin-top: 1.5rem;">Password</label>
                <input type="password" id="password" name="password" required>
                <button type="submit" class="btn-primary">Reset Password</button>
                <button type="back" class="btn-secondary" onclick="redirectToLogin()">
                    <span class="material-symbols-outlined">arrow_back</span>
                    <span class="btn-text">Back to login</span>
                </button>
            </form>
            <div id="success-message" class="hidden">
                <button onclick="redirectToLogin()" class="btn-primary">Go to Login</button>
            </div>
            <div id="loading" class="hidden">Loading...</div>
        </div>
    </main>

    <script>
        function showLoading() {
            document.getElementById('loading').classList.remove('hidden');
        }

        function hideLoading() {
            document.getElementById('loading').classList.add('hidden');
        }

        function disableForm(form) {
            Array.from(form.elements).forEach(element => {
                element.disabled = true;
            });
        }

        function enableForm(form) {
            Array.from(form.elements).forEach(element => {
                element.disabled = false;
            });
        }

        function redirectToLogin() {
            window.location.href = '/login';
        }

        document.getElementById('email-form').addEventListener('submit', function(event) {
            event.preventDefault();
            const email = document.getElementById('email').value;

            // Move to the next step immediately
            document.getElementById('email-form').classList.add('hidden');
            document.getElementById('code-form').classList.remove('hidden');
            document.getElementById('title').textContent = 'Enter the verification code';

            fetch('/forgot-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email })
            })
            .then(response => response.json())
            .then(data => {
                if (!data.success) {
                    // If there is an error, revert to the previous step and show an alert
                    document.getElementById('code-form').classList.add('hidden');
                    document.getElementById('email-form').classList.remove('hidden');
                    document.getElementById('title').textContent = 'Forgot Your Password?';
                    alert(data.message);
                }
            })
            .catch(error => {
                // Handle errors gracefully
                console.error('Error:', error);
                document.getElementById('code-form').classList.add('hidden');
                document.getElementById('email-form').classList.remove('hidden');
                document.getElementById('title').textContent = 'Forgot Your Password?';
                alert('An error occurred. Please try again.');
            });
        });

        document.addEventListener('DOMContentLoaded', (event) => {
            const codeInputs = document.querySelectorAll('.code-input');

            codeInputs.forEach((input, index) => {
                input.addEventListener('input', () => {
                    if (input.value.length === 1 && index < codeInputs.length - 1) {
                        codeInputs[index + 1].focus();
                    }
                });

                input.addEventListener('keydown', (event) => {
                    if (event.key === 'Backspace' && input.value === '' && index > 0) {
                        codeInputs[index - 1].focus();
                    }
                });
            });
        });

        document.getElementById('code-form').addEventListener('submit', function(event) {
            event.preventDefault();
            const code = Array.from(document.querySelectorAll('.code-input')).map(input => input.value).join('');

            fetch('/verify-code', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email: document.getElementById('email').value, code })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('code-form').classList.add('hidden');
                    document.getElementById('password-form').classList.remove('hidden');
                    document.getElementById('title').textContent = 'Enter your new password';
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            });
        });

        document.getElementById('password-form').addEventListener('submit', function(event) {
            event.preventDefault();
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            fetch('/reset-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email, password })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('password-form').classList.add('hidden');
                    document.getElementById('success-message').classList.remove('hidden');
                    document.getElementById('title').textContent = 'Password changed!';
                } else {
                    alert(data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            });
        });

        function toggleMenu() {
            var menuOverlay = document.getElementById("menuOverlay");
            menuOverlay.classList.toggle("active");
        }
    </script>
</body>

</html>

